@model MoneyTracker.Models.Expense

<div class="container-fluid bg-light p-5">
    <div class="row">
        <div class="col-md-6">
            <form class="form-horizontal" asp-action="ReportExpenses">
                <fieldset>
                    <legend><b>Report of expenses by date</b></legend>
                    <div class="form-group">
                        <label for="minDate" class="col-lg-6 control-label mt-2">From</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="col-lg-6 control-label mt-2">To</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="CategoryId" class="col-lg-6 control-label mt-2">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option value="">-- All Categories --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-info mt-2">Filter</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
